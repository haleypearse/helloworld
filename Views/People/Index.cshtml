@model IEnumerable<HelloWorldMVC.Models.Person>

@{
    ViewBag.Title = "Greeting";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Hi! Who are you?</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

}

<form method="post">
    <fieldset>

        <p>
            <label for="Your name, please">Name:</label>
            <input type="text" name="title" value="@Request.Form["title"]" />
        </p>


        <p><input type="submit" name="buttonSubmit" value="Add Name" /></p>
    </fieldset>
</form>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TimesMet)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @{ /* Add column for times met*/}
                @Html.DisplayFor(modelItem => item.TimesMet)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.FirstName }) |
                @Html.ActionLink("Details", "Details", new { id = item.FirstName }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.FirstName })
            </td>
        </tr>
    }

</table>
